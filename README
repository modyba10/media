function isIpAddressAlive($ip_address) {
    // Commande de ping pour vérifier l'état de l'adresse IP
    $ping_command = "ping -c 1 " . escapeshellarg($ip_address);
    
    // Exécute la commande de ping et récupère le résultat
    exec($ping_command, $output, $result);
    
    // Si le résultat est 0, l'adresse IP est en ligne (alive)
    // Sinon, elle est hors ligne (offline)
    return ($result === 0);
}

// Vérifie si l'adresse IP est en ligne ou hors ligne
if (isIpAddressAlive($ip_address)) {
    echo "L'adresse IP $ip_address est en ligne (alive).";
} else {
    echo "L'adresse IP $ip_address est hors ligne (offline).";
}